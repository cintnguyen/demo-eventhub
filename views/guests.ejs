                    <figure class="design-img-hearts mb-0">
                        <img src="../assets/images/contact-details-hearts.png" alt="" class="star">
                    </figure>
                </div>
                <!-- <h5 class="autorix-text aos-init aos-animate"><span class="ityped">Contact with Us</span><span class="ityped-cursor">|</span></h5> -->
                    <h2 id="cnpotential" class="aos-init aos-animate">Potential Guest List:</h2>
            </div>
        </div>
        <table>
            <div class="row">
                <thead>
                    <tr>
                    <th class="col-lg-3 col-md-6">Name</th>
                    <th class="col-lg-3 col-md-6">Email</th>
                    <th class="col-lg-3 col-md-6">Number</th>
                    <th class="col-lg-3 col-md-6">Invited</th>
                    </tr>
                </thead>
            </div>
            <div class="row">
                <tbody>
                <% for(var i=0; i<guests.length; i++) {%>
                    <tr>
                    <td class="col-lg-3 col-md-6" id="<%=guests[i]._id%>">
                        <%=guests[i].name %>
                    </td>
                    <td class="col-lg-3 col-md-6" id="<%=guests[i]._id%>">
                        <%=guests[i].email %>
                    </td>
                    <td class="col-lg-3 col-md-6" id="<%=guests[i]._id%>">
                        <%=guests[i].phoneNumber %>
                    </td>
                    <td class="col-lg-3 col-md-6 inviteStatus" id="<%=guests[i]._id%>">
                        <%=guests[i].invited %>
                    </td>
                    <form action="/post/invite/<%= event._id%>?_method=PUT" method="POST">
                        <input type="hidden" value="<%=i%>" name="guest">
                    <td><button type="submit" class="invitebtn">Invite</button></td>
                    </form>
                    <form action="/post/invite/<%= event._id%>?_method=DELETE" method="POST">
                        <input type="hidden" value="<%=i%>" name="guest">
                    <td><button type="submit" class="deletebtn">Delete</span></td>
                    </form>
                    </tr>
                <% } %>
                </tbody>
            </div>
          </table>
          <br>
          <br>
          <!-- <div class="row">
            <button class="col-lg-12 clear">Clear All Contacts</button>
          </div> -->
    </div>
    
</section>

<div class="container">
